<form method="post" class="form-horizontal" role="form" id="reset-password-form">
  <input type="hidden" name="key" value="#{h request[rodauth.reset_password_key_param]}" />
  #{csrf_tag if respond_to?(:csrf_tag)}
  <div class="form-group">
    <label class="col-sm-2 control-label" for="password">#{rodauth.password_label}</label>
    <div class="col-sm-10">
      <input type="password" class="form-control#{' error' if @password_error}" name="password" id="password"/> #{@password_error}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="password-confirm">#{rodauth.confirm_password_label}</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password-confirm" id="password-confirm"/>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-default" value="Reset Password"/>
    </div>
  </div>
</form>

